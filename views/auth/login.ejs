<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SalesPilot</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon-blue.ico" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/assets/css/backend-plugin.min.css">
    <link rel="stylesheet" href="/assets/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/assets/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="/assets/vendor/remixicon/fonts/remixicon.css"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background-color: #f4f7f6;
        }
        .container {
            max-width: 1000px;
            margin-top: 50px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .error-message {
            color: red;
            font-size: 14px;
        }
        #successMessage {
            display: none;
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Login</h2>
                                            <p>Welcome back! Please log in to your account.</p>

                                            <div class="card-body">
                                                <form role="form" id="loginForm" autocomplete="off">
                                                    <div class="input-group input-group-outline mb-3">
                                                      <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                                                    </div>
                                                
                                                    <div class="input-group input-group-outline mb-3">
                                                      <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                                                    </div>

                                                    <div class="text-center">
                                                      <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Login</button>
                                                    </div>
                                                </form>
                                                
                                                <p class="mt-3 text-center">
                                                    <a href="/password-reset/recoverpwd" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Forgot your password?</a>
                                                  </p>
                                                  
                                                  
                                                  <p class="mt-3 text-center">
                                                    Don't have an account? <a href="/signup" class="btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0">Sign up here</a>
                                                  </p>
                                                  
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-5 content-right">
                                        <img src="/assets/images/login/side-bkg.png" class="img-fluid image-right" alt="Login Illustration">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Modal for successful login -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loginModalLabel">Login Successful</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>You have successfully logged in. Click below to go to your dashboard.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#loginForm").submit(function (event) {
                event.preventDefault(); // Prevent full page reload

                $(".error-message").text(""); // Clear previous errors

                // Collect form data
                const formData = {
                    email: $("#email").val(),
                    password: $("#password").val(),
                };

                $.ajax({
                    type: "POST",
                    url: "/auth/login",
                    contentType: "application/json",
                    data: JSON.stringify(formData),
                    success: function (response) {
                        // Show the login success modal
                        $('#loginModal').modal('show');
                    },
                    error: function (xhr) {
                        if (xhr.responseJSON.errors) {
                            xhr.responseJSON.errors.forEach(err => {
                                $("#" + err.param + "Error").text(err.msg);
                            });
                        } else {
                            alert(xhr.responseJSON.message || 'Login failed.');
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
