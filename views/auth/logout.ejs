<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logging Out - SalesPilot</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/images/favicon-blue.ico" />

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/css/backend.css?v=1.0.0">
  <link rel="stylesheet" href="/assets/css/backend-plugin.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .vh-100 {
      height: 100vh;
    }
  </style>
</head>

<body>
  <!-- Loader -->
  <div id="loading">
    <div id="loading-center"></div>
  </div>

  <!-- Logout Message -->
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
      <h2>Logging Out...</h2>
      <p>You are being signed out. Please wait...</p>
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  </div>

  <!-- Logout Success Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Logout Successful</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          You have been successfully logged out.
        </div>
        <div class="modal-footer">
          <a href="/login" class="btn btn-primary w-100">Back to Login</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/assets/js/backend-bundle.min.js"></script>
  <script src="/assets/js/app.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      fetch('/auth/logout', {
        method: 'POST',
        credentials: 'same-origin',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(res => res.json())
      .then(data => {
        if (data.message === 'Logged out successfully') {
          const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
          logoutModal.show();

          setTimeout(() => {
            window.location.href = '/login';
          }, 2000);
        } else {
          alert("Logout failed. Please try again.");
        }
      })
      .catch(() => {
        alert("An error occurred during logout.");
      });
    });
  </script>
</body>
</html>
